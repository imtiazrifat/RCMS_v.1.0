        <!-- MAIN CONTENT -->
        <div id="content">




            <!-- widget grid -->
            <section id="widget-grid" class="">



                <div class="row ">

                    <div class="jarviswidget col-sm-12 col-md-12 col-lg-12" data-widget-editbutton="false" data-widget-custombutton="false">

                        <header>
                            <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                            <h2>Home Content </h2>

                        </header>

                        <!-- widget div-->
                        <div>

                            <table id="worksTable" class="table">
                                <thead>
                                    <tr class="danger">
                                        <th data-field="MessageId" data-visible="false"></th>
                                        <th data-field="CreateDate" data-formatter="dateFormat" data-cell-style="cellStyle">Date</th>
                                        
                                        <th data-field="Name" data-cell-style="cellStyle" >Name</th>
                                        <th data-field="Email" data-cell-style="cellStyle">Email</th>
                                        <th data-field="Ip" data-cell-style="cellStyle">Ip</th>
                                        <th data-field="Mac" data-cell-style="cellStyle">Mac</th>
                                        <th data-formatter="TableMessageActions" data-events="actionEventsPort">Action</th>

                                    </tr>
                                </thead>
                            </table>


                        </div>
                        <!-- end widget div -->

                    </div>

                </div>
                <!-- END ROW-->

            </section>
            <!-- end widget grid -->


        </div>
        <!-- END MAIN CONTENT -->

    </div>
