                                    <i class="icon-append fa fa-building"></i>
                                    <input type="text" id="txtName" name="txtName" placeholder="Name" readonly>
                                </label>
                            </section>
                            <section class="col col-6">
                                <label for="txtEmail" class="label">Email</label>
                                <label class="input">
                                    <i class="icon-append fa fa-building"></i>
                                    <input type="text" id="txtEmail" name="txtEmail" placeholder="Emails" readonly>
                                </label>
                            </section>

                        </div>
                        <div class="row">
                            <section class="col col-6">
                                <label for="txtSubject" class="label">Subject</label>
                                <label class="input">
                                    <i class="icon-append fa fa-building"></i>
                                    <input type="text" id="txtSubject" name="txtSubject" placeholder="Name" readonly>
                                </label>
                            </section>
                            <section class="col col-6">
                                <label for="txtCreateDate" class="label">CreateDate</label>
                                <label class="input">
                                    <i class="icon-append fa fa-building"></i>
                                    <input type="text" id="txtCreateDate" name="txtCreateDate" placeholder="Emails" readonly>
                                </label>
                            </section>

                        </div>
                        <div class="row">
                            <section class="col col-6">
                                <label for="txtIp" class="label">Ip</label>
                                <label class="input">
                                    <i class="icon-append fa fa-building"></i>
                                    <input type="text" id="txtIp" name="txtIp" placeholder="IP" readonly>
                                </label>
                            </section>
                            <section class="col col-6">
                                <label for="txtMac" class="label">Mac</label>
                                <label class="input">
                                    <i class="icon-append fa fa-building"></i>
                                    <input type="text" id="txtMac" name="txtMac" placeholder="MAC" readonly>
                                </label>
                            </section>

                        </div>
                    </fieldset>
